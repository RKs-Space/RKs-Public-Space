        h1 {
             font-family:applicationFont;    
             line-height:90px;  
             color:white;      
           }
        body {
             font-family:applicationFont;
             font-size:19px;
             color:white;
             z-index:99;
             }
        input[type=text] {
                          width:100%;
                          color:black;
                         }
        .textR {
            color:black;
        }
        #workDoneId {
                       width:100%;
                       height:120px;
                    }
        #commentId {
                        width:100%;
                       height:120px;
                    }
       .thumb {
    height: 75px;
    border: 1px solid white;
    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
    transition: 0.3s;
    margin: 10px 5px 0 0;

     
  
  }


